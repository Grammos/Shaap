<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#201a1b13"
    android:gravity="right">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/harassmentTittle"
            android:text="@string/tittle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="19sp"
            android:textColor="#f9262e15"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:id="@+id/harassmentInfo"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/harassmentInfoText"
                android:background="#fffafff4"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="20dp"
                android:textSize="20sp" />
        </TableRow>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/gpsButton"
        android:paddingLeft="5dp">

        <TableRow
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:weightSum="1"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="38dp"
                android:text="@string/GPS"
                android:id="@+id/gpsView"
                android:layout_gravity="center|bottom|left|right"
                style="@android:style/Animation.Toast"
                android:textColor="#f9262e15"
                android:textSize="13sp" />
        </TableRow>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/onoff"
            android:layout_gravity="center"
            android:checked="false"
            android:layout_weight="0.08"
            android:layout_marginLeft="30dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_button"
        android:weightSum="1"
        android:layout_weight="0.05"
        android:layout_marginTop="10dp"
        android:paddingRight="40dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/photo"
            android:id="@+id/button_photo"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.32"
            android:background="@color/secondary_text_default_material_dark"
            android:textColor="#f9262e15" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.05"
        android:id="@+id/report_button"
        android:focusableInTouchMode="false"
        android:paddingRight="40dp"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/report_button"
            android:id="@+id/button_report"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.42"
            android:background="@color/secondary_text_default_material_dark"
            android:textColor="#f9262e15" />
    </TableRow>

</LinearLayout>