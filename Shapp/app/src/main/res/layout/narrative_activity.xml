<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#201a1b13">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:id="@+id/title"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_weight="0.03">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/harassmentTittle"
            android:background="#fffafff4"
            android:layout_gravity="bottom|left|right|top"
            android:paddingBottom="10dp"
            android:inputType="textCapWords"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.45"
        android:weightSum="1"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:id="@+id/harassmentInfo"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/harassmentInfoText"
                android:background="#fffafff4"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="20dp" />
        </TableRow>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:weightSum="1"
        android:layout_gravity="top"
        android:paddingLeft="40dp"
        android:paddingRight="90dp"
        android:id="@+id/gpsButton"
        android:layout_marginTop="5dp">

        <TableRow
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:weightSum="1"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/GPS"
                android:id="@+id/gpsView"
                android:gravity="center|clip_horizontal|left"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <Switch
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:id="@+id/switch1"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:checked="false" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/upload_button"
        android:weightSum="1"
        android:layout_weight="0.05"
        android:paddingRight="25dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/photo"
            android:id="@+id/button_photo"
            android:layout_marginLeft="40dp"
            android:paddingRight="10dp"
            android:layout_weight="0.18"
            android:background="@color/background_floating_material_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.05"
        android:id="@+id/report_button"
        android:focusableInTouchMode="false"
        android:paddingRight="25dp"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/report_button"
            android:id="@+id/button_report"
            android:paddingRight="10dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.78"
            android:background="@color/background_floating_material_light" />
    </TableRow>

</LinearLayout>